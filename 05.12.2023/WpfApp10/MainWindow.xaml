<Window x:Class="WpfApp10.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ToDo" Height="500" Width="500" WindowStartupLocation="CenterScreen"  ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <TextBox x:Name="taskTextBox" Width="210" Margin="2" FontFamily="Segoe UI Semibold" FontSize="16" FontWeight="Bold"/>
            <Button Content="Add" Width="80" Click="AddClick" Margin="2"/>
            <Button Content="Remove" Width="85" Click="RemoveClick" Margin="2"/>
            <Button Content="Mark" Width="80" Click="MarkClick" Margin="2"/>
        </StackPanel>

        <ListBox x:Name="taskListBox" Grid.Row="1" Margin="5" Height="425" FontFamily="Segoe UI Semibold" FontSize="16" FontWeight="Bold"/>
    </Grid>
</Window>
